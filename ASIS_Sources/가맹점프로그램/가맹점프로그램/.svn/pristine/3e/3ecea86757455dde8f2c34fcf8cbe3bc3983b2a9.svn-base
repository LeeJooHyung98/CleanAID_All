Private Sub Data_Display()
    On Error GoTo ErrRtn
    
    Query = "SELECT    A.접수일자"
    Query = Query & ", A.예정일자"
    Query = Query & ", A.부모택번호"
    Query = Query & ", B.전화번호"
    Query = Query & ", B.휴대전화"
    Query = Query & ", B.성명"
    Query = Query & ", A.의류명"
    Query = Query & ", A.택번호"
    Query = Query & ", A.색상"
    Query = Query & ", A.무늬"
    Query = Query & ", A.내용"
    Query = Query & ", A.금액"
    Query = Query & ", A.결제여부"
    Query = Query & ", A.상표"
    Query = Query & ", A.고객코드"
    Query = Query & " FROM TB_입출고 AS A LEFT OUTER JOIN TB_고객정보 AS B ON A.고객코드 = B.고객코드"
    Query = Query & " WHERE (A.판매취소 <> 'Y')"
    If Left(cboGubun.Text, 2) = "01" Then
        Query = Query & "   AND (A.예정일자 <= '" & Format(dtpDay(0).Value, "YYYY-MM-DD") & "') "
    ElseIf Left(cboGubun.Text, 2) = "02" Then
        Query = Query & "   AND (A.접수일자 between '" & Format(dtpDay(0).Value, "YYYY-MM-DD") & "' and '" & Format(dtpDay(1).Value, "YYYY-MM-DD") & "') "
    End If
    Query = Query & "   AND ((A.지사출고일자 = '' OR A.지사출고일자 IS NULL)"
    Query = Query & "   AND  (A.가맹점입고일자 = '' OR A.가맹점입고일자 IS NULL))"
    Query = Query & "   AND (RTRIM(A.출고일자) = '')"
    
    If txtTAGNo.RawData <> "" Then Query = Query & "  AND A.택번호 LIKE '%" & txtTAGNo.RawData & "'"
    
    Query = Query & " ORDER BY A.접수일자, A.택번호 "
    Set ADORs = New ADODB.Recordset
    ADORs.Open Query, ADOCon, adOpenForwardOnly, adLockReadOnly
    
    With sprGrid
        .MaxRows = 0
        .ReDraw = False
        
        Do Until ADORs.EOF
            .MaxRows = .MaxRows + 1
            .Row = .MaxRows
            
            .Col = 1:  .Text = ADORs!접수일자 & ""
            .Col = 2:  .Text = ADORs!예정일자 & ""
            .Col = 3:  .Text = ADORs!성명 & ""
            .Col = 4:  .Text = ADORs!전화번호 & ""
            .Col = 5:  .Text = ADORs!휴대전화 & ""
            .Col = 6:  .Text = ADORs!의류명 & ""
            
            .Col = 7: .Text = ADORs!택번호 & ""
            If Len(Trim(ADORs!택번호)) > 6 Then .Text = Format(ADORs!택번호, "000-00-0000")
            
            .Col = 8:  .Text = "0"
            
            .Col = 9:  .Text = ""
            If Trim(ADORs!택번호) <> "" Then .Text = Format(ADORs!부모택번호, "000-00-0000")
            
            .Col = 10:  .Text = ADORs!색상 & ""
            .Col = 11: .Text = ADORs!무늬 & ""
            .Col = 12: .Text = ADORs!내용 & ""
            .Col = 13: .Text = ADORs!금액 & ""
            .Col = 14: .Text = ADORs!상표 & ""
            .Col = 15: .Text = ADORs!고객코드 & ""
            
            ADORs.MoveNext
        Loop
        ADORs.Close
        Set ADORs = Nothing
        
        .ReDraw = True
    End With
    
    Exit Sub
    
ErrRtn:
    Call Error_Msg("", Err.Source, Err.Number, Err.description)

    Screen.MousePointer = 0
End Sub

