                    Print #1, "</root>"
                    Close #1
                End With
                
                With rpt본사미출고현황
                    .dc.FileURL = AppPath & "XML\본사미출고현황.XML"
                    .PrintReport True
                End With
        
                Unload rpt본사미출고현황
                
        Case 5: Unload Me
    End Select
    
    Exit Sub
    
ErrRtn:
    Call Error_Msg("", Err.Source, Err.Number, Err.description)

    Screen.MousePointer = 0
End Sub

