Private Sub ctlMenu1_Click(Index As Integer)
    On Error GoTo ErrRtn
    
    Dim strButtonText As String     ' 선택된 색상을 저장한다.
    Dim intRow        As Integer           ' 마지막 라인

    strButtonText = ctlMenu1(Index).GetMenuName
   
    ' 선택된 라인에 물품이 없을 경우 아무 처리도 하지 않는다.
    If Len(Get_SpreadText(frm접수.sprGrid, Val(iCur), 1)) <= 0 Then
        Exit Sub
    End If
   
    '-------------------------------------------------------------
    ' 입고 폼에 색상을 출력 한다.
    '-------------------------------------------------------------
    DoEvents
    frm접수.sprGrid.Row = iCur
    frm접수.sprGrid.Col = 4: frm접수.sprGrid.Text = strButtonText
   
    frm무늬.Hide 'Unload Me' 자신은 종료 한다.
   
   If frm접수.chkRepair.Value = -1 Then
        ' 내용화면을 보여준다.
        DoEvents
        Load frm세탁수선
        
        frm세탁수선.Show
   Else
        ' 내용화면을 보여준다.
        DoEvents
        Load frm작업
        
        frm작업.Show
    End If
    
    '-----------------------------------
    ' Active Cell
    '-----------------------------------
    frm접수.sprGrid.SetActiveCell 5, iCur
        
    Exit Sub
    
ErrRtn:
    Call Error_Msg("", Err.Source, Err.Number, Err.description)

    Screen.MousePointer = 0
End Sub

Private Sub Form_Load()
    Dim frm As Form
    
    For Each frm In Forms
        If frm.Name = "frm작업" Then
            frm.Hide
            Unload frm
        End If
    Next frm
    
    Me.Top = frmMain.Top   '310
    Me.Left = frmMain.Left '80
    
    
    If ctlMenu1.Count > 1 Then
        For i = 1 To ctlMenu1.Count - 1
            Unload ctlMenu1(i)
        Next i
    End If
    
    For i = 1 To 6
        Load ctlMenu1(i)
        ctlMenu1(i).Left = GetLeft(i)
        ctlMenu1(i).Top = GetTop(i)
        
        Select Case i
            Case 1: Call ctlMenu1(i).SET_Item("없음", 0, "", AppPath & "PatternImage\무늬없음32.ico")
            Case 2: Call ctlMenu1(i).SET_Item("가로", 0, "", AppPath & "PatternImage\가로무늬32.ico")
            Case 3: Call ctlMenu1(i).SET_Item("세로", 0, "", AppPath & "PatternImage\세로무늬32.ico")
            Case 4: Call ctlMenu1(i).SET_Item("체크", 0, "", AppPath & "PatternImage\체크무늬32.ico")
            Case 5: Call ctlMenu1(i).SET_Item("혼합", 0, "", AppPath & "PatternImage\혼합무늬32.ico")
            Case 6: Call ctlMenu1(i).SET_Item("기타", 0, "", AppPath & "PatternImage\무늬없음32.ico")
        End Select
        
        ctlMenu1(i).Enabled = True
        ctlMenu1(i).Visible = True
    Next i
End Sub

