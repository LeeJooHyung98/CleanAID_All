Option Explicit

Private Sub cmdBtn_Click(Index As Integer)
    On Error GoTo ErrRtn

    Select Case Index
        Case 0
            Call SetIniStr("Store Server", "DataBaseName", Set_Encrypt(txtData(0).Text, ""), m_iniFile)
            Call SetIniStr("Store Server", "ServerNameOrIP", Set_Encrypt(txtData(1).Text, ""), m_iniFile)
            Call SetIniStr("Store Server", "UserID", Set_Encrypt(txtData(2).Text, ""), m_iniFile)
            Call SetIniStr("Store Server", "UserPassword", Set_Encrypt(txtData(3).Text, ""), m_iniFile)
            Call SetIniStr("Store DATA", "StoreCode", Set_Encrypt(txtData(4).Text, ""), m_iniFile)
            Call SetIniStr("Store DATA", "StoreName", Set_Encrypt(txtData(5).Text, ""), m_iniFile)
            
            
            Call GetDefaultValues
            
            Unload Me
            
        Case 1:
            Unload Me
    End Select

    Exit Sub

ErrRtn:
    Call Error_Msg("", Err.Source, Err.Number, Err.Description)

    Screen.MousePointer = 0
End Sub

Private Sub Form_Load()
    On Error GoTo ErrRtn
    
    Me.Top = (Screen.Height - Me.Height) / 2
    Me.Left = (Screen.Width - Me.Width) / 2

    txtData(0).Text = Get_Decrypt(GetIniStr("Store Server", "DataBaseName", "", m_iniFile), "")
    txtData(1).Text = Get_Decrypt(GetIniStr("Store Server", "ServerNameOrIP", "", m_iniFile), "")
    txtData(2).Text = Get_Decrypt(GetIniStr("Store Server", "UserID", "", m_iniFile), "")
    txtData(3).Text = Get_Decrypt(GetIniStr("Store Server", "UserPassword", "", m_iniFile), "")
    
    txtData(4).Text = Get_Decrypt(GetIniStr("Store DATA", "StoreCode", "", m_iniFile), "")
    txtData(5).Text = Get_Decrypt(GetIniStr("Store DATA", "StoreName", "", m_iniFile), "")
    
    Exit Sub

ErrRtn:
    Call Error_Msg("", Err.Source, Err.Number, Err.Description)

    Screen.MousePointer = 0
End Sub

