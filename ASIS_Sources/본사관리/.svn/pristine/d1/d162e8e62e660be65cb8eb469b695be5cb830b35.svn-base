Private Sub PrintDesc()
    Dim i As Integer
    Dim TempText As String
    Dim TempFP As String
    Dim TempFile As String
    
    TempFP = GetIniStr("REPORT", "TempPath", "", m_iniFile)
    TempFile = TempFP & "\Temp.txt"
    
    Open TempFile For Output As #1
    
    TempText = ""
    
    For i = 1 To spdView(0).MaxRows
        spdView(0).Row = i
        
        TempText = LeftH(i & Space(3), 3) & Space(1)
        
        spdView(0).Col = 1
        TempText = TempText & LeftH(Mid(spdView(0).Text, 7) & Space(14), 14)
        spdView(0).Col = 2
        TempText = TempText & LeftH(spdView(0).Text & Space(6), 6)
        spdView(0).Col = 3
        TempText = TempText & LeftH(spdView(0).Text & Space(12), 12)
        spdView(0).Col = 5
        TempText = TempText & LeftH(spdView(0).Text & Space(16), 16)
        spdView(0).Col = 6
        TempText = TempText & LeftH(spdView(0).Text & Space(20), 20)
        If chkSelect.Value = 1 Then
            spdView(0).Col = 8
            TempText = TempText & RightH(Space(10) & spdView(0).Text, 10) & Space(2)
        Else
            TempText = TempText & Space(10)
        End If
        spdView(0).Col = 9
        TempText = TempText & RightH(Space(10) & spdView(0).Text, 10) & Space(2)
        
        Print #1, TempText
    Next i
    
    Close #1
End Sub

