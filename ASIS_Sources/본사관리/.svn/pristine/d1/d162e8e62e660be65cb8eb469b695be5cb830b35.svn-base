Private Sub Data_Display()
    On Error GoTo ErrRtn

    Dim i, ii As Integer
    
    Dim lTotal(3) As Long
    
    ReDim sValue(1)
    
    sValue(0) = "0"
    sValue(1) = Format(dtInput.Value, "YYYY-MM-DD")
        
    Set RS01 = New ADODB.Recordset
    Set RS01 = ExecPro("SP_07007_00", sValue(), Err_Num, Err_Dec)
    
    spdView(0).MaxCols = RS01.Fields.Count
    spdView(0).MaxRows = RS01.RecordCount
    
    Call spdDisplay(RS01)
    Call GetColWidth(REG_App, Me.Name & "A", spdView(0))
    Call spdComboAdd
    
    Do While Not RS01.EOF
        i = i + 1
        spdView(0).Row = i
        spdView(0).Col = 1
        
        For ii = 0 To spdView(0).TypeComboBoxCount
            spdView(0).TypeComboBoxIndex = ii
            If Trim(RS01!매장명) = Trim(spdView(0).TypeComboBoxString) Then
                spdView(0).TypeComboBoxCurSel = ii
                Exit For
            End If
        Next ii
        
        spdView(0).Col = 7:  If spdView(0).Value <> "" Then lTotal(0) = lTotal(0) + spdView(0).Value
        spdView(0).Col = 8:  If spdView(0).Value <> "" Then lTotal(1) = lTotal(1) + spdView(0).Value
        spdView(0).Col = 9:  If spdView(0).Value <> "" Then lTotal(2) = lTotal(2) + spdView(0).Value
        spdView(0).Col = 11: If spdView(0).Value <> "" Then lTotal(3) = lTotal(3) + spdView(0).Value
        
        RS01.MoveNext
    Loop
    
    txtInput(0).Text = Format(spdView(0).MaxRows, "#,##0")
    txtInput(1).Text = Format(lTotal(0), "#,##0")
    txtInput(2).Text = Format(lTotal(1), "#,##0")
    txtInput(6).Text = Format(lTotal(2), "#,##0")
    txtInput(7).Text = Format(lTotal(3), "#,##0")
        
    Exit Sub
    
ErrRtn:
    Call Error_Msg("", Err.Source, Err.Number, Err.Description)
End Sub

Private Sub DataTrans()
    Dim i As Integer
    
    Dim rCnt As Integer
    Dim dCnt As Integer
    Dim wCnt As Integer
    
    Dim sData As String
    Dim mDate As String
    Dim sFilePath As String
    
    sFilePath = GetIniStr("TERMINAL DATA", "TerminalFilePath", "", m_iniFile)
    
    spdView(0).MaxRows = 0
        
    If Dir(sFilePath & "\Ibchul.dat") <> "" Then
        ReDim sValue(3)
    
        '핸디로부터 읽은 데이타를 db로
        rCnt = 0
        dCnt = 0
        wCnt = 0
           
        Open sFilePath & "\Ibchul.dat" For Input As #1
        
        Do While Not EOF(1)         ' Loop until end of file.
            Input #1, sData         ' Read line into variable.
            
            sValue(0) = "0"
            sValue(1) = CStr(Year(Date)) & Trim(Mid(sData, 6, 4)) ' dat파일에서 6 자리일자를 8자리로 변환
            
            mDate = Format(sValue(1), "####/##/##")
            
            sValue(2) = Trim(Mid(sData, 10, 3)) ' dat파일에서 read
            sValue(3) = Trim(Mid(sData, 13, 4))
'            sValue(4) = Trim(Mid(sData, 28, 3))
            
            rCnt = rCnt + 1
            
            If Len(Trim(sValue(1))) <> 8 Or Not IsDate(mDate) Or _
               Len(Trim(sValue(2))) <> 3 Or Not IsNumeric(sValue(1)) Or _
               Len(Trim(sValue(3))) <> 4 Or Not IsNumeric(sValue(2)) Then
'               Len(Trim(sValue(3))) <> 3 Or sValue(3) <> "000" Then
                dCnt = dCnt + 1
                GoTo handy_err
            End If
            
            dtInput.Value = mDate
            
            Set RS01 = New ADODB.Recordset
            Set RS01 = ExecPro("SP_07007_03", sValue(), Err_Num, Err_Dec)
            
            If Not RS01.EOF Then
                spdView(0).MaxRows = spdView(0).MaxRows + 1
                spdView(0).Row = spdView(0).MaxRows
                
                spdView(0).Col = 1
                For i = 0 To spdView(0).TypeComboBoxCount
                    spdView(0).TypeComboBoxIndex = i
                    If sValue(2) = Mid(spdView(0).TypeComboBoxString, 2, 3) Then
                        spdView(0).TypeComboBoxCurSel = i
                        Exit For
                    End If
                Next i
                
                spdView(0).Col = 2: spdView(0).Text = Format(sValue(3), "@-@@@")
                spdView(0).Col = 3: spdView(0).Text = RS01!입고일자
                spdView(0).Col = 4: spdView(0).Text = RS01!품목코드
                spdView(0).Col = 5: spdView(0).Text = RS01!품목명
                spdView(0).Col = 6: spdView(0).Text = RS01!내역
                spdView(0).Col = 7: If Not IsNull(RS01!금액) Then spdView(0).Text = Val(RS01!금액)
                spdView(0).Col = 8: If Not IsNull(RS01!입금액) Then spdView(0).Text = Val(RS01!입금액)
                spdView(0).Col = 9: If Not IsNull(RS01!외주금액) Then spdView(0).Text = Val(RS01!외주금액)
                spdView(0).Col = 11: If Not IsNull(RS01!대리점금액) Then spdView(0).Text = Val(RS01!대리점금액)
            Else
                spdView(0).MaxRows = spdView(0).MaxRows + 1
                spdView(0).Row = spdView(0).MaxRows
                
                spdView(0).Col = -1: spdView(0).BackColor = vbYellow
                
                Set RS01 = New ADODB.Recordset
                Set RS01 = ExecPro("SP_07007_05", sValue(), Err_Num, Err_Dec)
                
                spdView(0).Col = 1
                For i = 1 To spdView(0).TypeComboBoxCount
                    spdView(0).TypeComboBoxIndex = i
                    If sValue(2) = Mid(spdView(0).TypeComboBoxString, 2, 3) Then
                        spdView(0).TypeComboBoxCurSel = i
                        Exit For
                    End If
                Next i
                
                spdView(0).Col = 2
                spdView(0).Text = Format(sValue(3), "@-@@@")
                
                If Not RS01.EOF Then
                    spdView(0).Col = 3:  spdView(0).Text = RS01!입고일자
                    spdView(0).Col = 4:  spdView(0).Text = RS01!품목코드
                    spdView(0).Col = 5:  spdView(0).Text = RS01!품목명
                    spdView(0).Col = 6:  spdView(0).Text = RS01!내역
                    spdView(0).Col = 7:  If Not IsNull(RS01!금액) Then spdView(0).Text = Val(RS01!금액)
                    spdView(0).Col = 8:  If Not IsNull(RS01!입금액) Then spdView(0).Text = Val(RS01!입금액)
                    spdView(0).Col = 9:  If Not IsNull(RS01!외주금액) Then spdView(0).Text = Val(RS01!외주금액)
                    spdView(0).Col = 11: If Not IsNull(RS01!대리점금액) Then spdView(0).Text = Val(RS01!대리점금액)
                End If
            End If
            
            DoEvents
handy_err:
        Loop
        Close #1
    End If
    
    If spdView(0).MaxRows <> 0 Then
        If MsgBox("해당되는 데이터를 저장하시겠습니까?", vbQuestion + vbYesNo) = vbYes Then
            Call DataSave
        
            If Not Dir(sFilePath & "\Ibchul.dat") = "" Then
                Kill sFilePath & "\Ibchul.dat"
            End If
        End If
    End If
End Sub

Private Sub spdComboAdd()
    Dim sItem As String
    
    ReDim sValue(0)
    
    sValue(0) = "0"
    
    Set RS02 = New ADODB.Recordset
    Set RS02 = ExecPro("SP_00003", sValue(), Err_Num, Err_Dec)

    Do While Not RS02.EOF
        sItem = sItem & "[" & RS02!매장코드 & "] " & RS02!매장명 & Chr(9)
        
        RS02.MoveNext
    Loop
    
    spdView(0).Row = -1
    spdView(0).Col = 1
    spdView(0).TypeComboBoxList = sItem
End Sub

Public Sub DataAdd()
    spdView(0).MaxRows = spdView(0).MaxRows + 1
    
    spdView(0).Row = spdView(0).MaxRows
    spdView(0).Col = 1
    spdView(0).Action = ActionActiveCell
End Sub

Public Sub DataSave()
    Dim i As Integer
    
    ReDim sValue(10)
    
    For i = 1 To spdView(0).MaxRows
        spdView(0).Row = i
        
        sValue(0) = Format(dtInput.Value, "YYYY-MM-DD")   ' 외주보낸일자
        
        spdView(0).Col = 1: sValue(1) = Mid(spdView(0).Text, 2, 3)                         ' 대리점코드
        spdView(0).Col = 2: sValue(2) = spdView(0).Value                                   ' 택번호
        spdView(0).Col = 3: sValue(3) = Format(spdView(0).Text, "YYYY-MM-DD")                ' 입고일자
        spdView(0).Col = 4: sValue(4) = spdView(0).Text                                    ' 품목코드
        spdView(0).Col = 6: sValue(5) = RTrim(spdView(0).Text)                             ' 수선내용
        spdView(0).Col = 7: sValue(6) = IIf(spdView(0).Value = "", 0, spdView(0).Value)    ' 금액
        spdView(0).Col = 11: sValue(7) = IIf(spdView(0).Value = "", 0, spdView(0).Value)   ' 대리점금액
        spdView(0).Col = 9: sValue(8) = IIf(spdView(0).Value = "", 0, spdView(0).Value)    ' 외주금액
        spdView(0).Col = 8: sValue(9) = IIf(spdView(0).Value = "", 0, spdView(0).Value)    ' 입금금액
        spdView(0).Col = 10: sValue(10) = Format(spdView(0).Text, "YYYY-MM-DD")              ' 외주받은일자
                
        Call ExecPro("SP_07007_01", sValue(), Err_Num, Err_Dec)
        
        If Err_Num <> 0 Then
            MsgBox "[" & Err_Num & "] " & Err_Dec
            Exit Sub
        End If
    Next i
    
    MsgBox "해당되는 데이터가 정상적으로 저장이 되었습니다", vbInformation
End Sub

Private Sub spdView_Change(Index As Integer, ByVal Col As Long, ByVal Row As Long)
    If Index = 0 Then
        Select Case Col
            Case 1, 2
                ReDim sValue(3)
                
                spdView(0).Row = Row
                
                sValue(0) = "0"
                
                sValue(1) = Format(dtInput.Value, "YYYY-MM-DD")
                
                spdView(0).Col = 1
                sValue(2) = Mid(spdView(0).Text, 2, 3)
                spdView(0).Col = 2
                sValue(3) = Mid(spdView(0).Text, 1, 1) & Mid(spdView(0).Text, 3, 3)
                
                If sValue(1) = "" Or sValue(2) = "" Then
                    Exit Sub
                End If
                
                Set RS01 = New ADODB.Recordset
                Set RS01 = ExecPro("SP_07007_03", sValue(), Err_Num, Err_Dec)
                
                If RS01.RecordCount = 0 Then
                    MsgBox "입력하신 TAG NO는 입고내역이 없습니다.", vbInformation
                    spdView(0).SetFocus
                    Exit Sub
                Else
                    spdView(0).Col = 3:  spdView(0).Text = RS01!입고일자
                    spdView(0).Col = 4:  spdView(0).Text = RS01!품목코드
                    spdView(0).Col = 5:  spdView(0).Text = RS01!품목명
                    spdView(0).Col = 6:  spdView(0).Text = RS01!내역
                    spdView(0).Col = 7:  spdView(0).Text = RS01!금액
                    spdView(0).Col = 8:  spdView(0).Text = RS01!입금액
                    spdView(0).Col = 9:  spdView(0).Text = RS01!외주금액
                    spdView(0).Col = 11: spdView(0).Text = RS01!대리점금액
                End If
        End Select
    End If
End Sub

Public Sub DataDelete()
    If MsgBox("해당되는 내역을 삭제하시겠습니까?", vbQuestion + vbYesNo + vbDefaultButton2) = vbYes Then
        ReDim sValue(2)
        
        spdView(0).Row = spdView(0).ActiveRow
        
        sValue(0) = Format(dtInput.Value, "YYYY-MM-DD")
        spdView(0).Col = 1
        sValue(1) = Mid(spdView(0).Text, 2, 3)
        spdView(0).Col = 2
        sValue(2) = spdView(0).Value
        
        Call ExecPro("SP_07007_02", sValue(), Err_Num, Err_Dec)
        
        If Err_Num = 0 Then
            spdView(0).Col = -1
            spdView(0).Action = ActionDeleteRow
            spdView(0).MaxRows = spdView(0).MaxRows - 1
            
            MsgBox "해당내역이 정상적으로 삭제 되었습니다.", vbInformation
            Exit Sub
        Else
            MsgBox "[" & Err_Num & "] " & Err_Dec
            Exit Sub
        End If
    End If
End Sub

Private Sub spdView_DblClick(Index As Integer, ByVal Col As Long, ByVal Row As Long)
    If Index = 1 Then
        panSubMain(0).Visible = False
        
        spdView(0).Row = spdView(0).ActiveRow
        spdView(1).Row = spdView(1).ActiveRow
        
        spdView(0).Col = 4
        spdView(1).Col = 1
        spdView(0).Text = spdView(1).Text
        
        spdView(0).Col = 5
        spdView(1).Col = 2
        spdView(0).Text = spdView(1).Text
    ElseIf Index = 2 Then
        panSubMain(1).Visible = False
        
        spdView(0).Row = spdView(0).ActiveRow
        spdView(2).Row = spdView(2).ActiveRow
        
        spdView(0).Col = 6
        spdView(2).Col = 2
        spdView(0).Text = spdView(2).Text
        
        spdView(0).Col = 7
        spdView(2).Col = 3
        spdView(0).Text = spdView(2).Value
        
        spdView(0).Col = 9
        spdView(2).Col = 4
        spdView(0).Text = spdView(2).Value
        
        spdView(0).Col = 11
        spdView(2).Col = 5
        spdView(0).Text = spdView(2).Value
    End If
End Sub

Private Sub spdView_KeyPress(Index As Integer, KeyAscii As Integer)
    If Index = 0 Then
        If KeyAscii = 13 Then
            If spdView(0).ActiveCol = 4 Then
                spdView(0).Row = spdView(0).ActiveRow
                spdView(0).Col = 4
                
                If Trim(spdView(0).Text) = "" Then
                    panSubMain(0).Visible = True
                    
                    ReDim sValue(0)
                    
                    sValue(0) = "0"
                    
                    Set RS01 = New ADODB.Recordset
                    Set RS01 = ExecPro("SP_00005", sValue(), Err_Num, Err_Dec)
                    
                    spdView(1).MaxRows = 0
                    
                    Do While Not RS01.EOF
                        spdView(1).MaxRows = spdView(1).MaxRows + 1
                        spdView(1).Row = spdView(1).MaxRows
                        
                        spdView(1).Col = 1: spdView(1).Text = RS01!의류코드 & ""
                        spdView(1).Col = 2: spdView(1).Text = RS01!의류명 & ""
                        
                        RS01.MoveNext
                    Loop
                End If
            ElseIf spdView(0).ActiveCol = 6 Then
                spdView(0).Row = spdView(0).ActiveRow
                spdView(0).Col = 6
                
                If Trim(spdView(0).Text) = "" Then
                    panSubMain(1).Visible = True
                    
                    ReDim sValue(0)
                    
                    sValue(0) = "0"
                    
                    Set RS01 = New ADODB.Recordset
                    Set RS01 = ExecPro("SP_00011", sValue(), Err_Num, Err_Dec)
                    
                    spdView(2).MaxRows = 0
                    
                    Do While Not RS01.EOF
                        spdView(2).MaxRows = spdView(2).MaxRows + 1
                        spdView(2).Row = spdView(2).MaxRows
                        
                        spdView(2).Col = 1: spdView(2).Text = RS01!수선코드
                        spdView(2).Col = 2: spdView(2).Text = RS01!수선명
                        spdView(2).Col = 3: spdView(2).Text = Val(RS01!수선금액)
                        spdView(2).Col = 4: spdView(2).Text = Val(RS01!외주금액)
                        spdView(2).Col = 5: spdView(2).Text = Val(RS01!대리점금액)
                        
                        RS01.MoveNext
                    Loop
                End If
            End If
        
            If spdView(0).MaxCols = spdView(0).ActiveCol Then
                If spdView(0).MaxRows = spdView(0).ActiveRow Then
                    spdView(0).MaxRows = spdView(0).MaxRows + 1
                End If
            End If
        End If
    End If
End Sub



